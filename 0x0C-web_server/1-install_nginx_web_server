#!/usr/bin/env bash
# This script installs Nginx on a new Ubuntu machine and configures it to serve a page with "Hello World!"


# Update package lists and install Nginx
apt-get update -y
apt-get install nginx -y

# Configure Nginx to listen on port 80
sed -i 's/listen 80 default_server;/listen 80 default_server;/g' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen \[::\]:80 default_server;/g' /etc/nginx/sites-available/default

# Create the HTML file that Nginx will serve
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Start Nginx without using systemctl
service nginx restart
